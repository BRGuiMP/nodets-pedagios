{{>partials/header}}



<fieldset>
    <legend>Novo Cargo</legend>
    <form method = 'POST' action='/novocargo'>
        <input type='text' name='name' placeholder='Digite um nome' /><br/><br/>
        <textarea type='text' name=descpermission rows="4" cols="50" placeholder='Digite uma descrição'></textarea><br/><br/>
        <input type='text' name='cargo' placeholder='Digite o cargo' /><br/><br/>
        <input type='submit' value='Inserir Cargo' />
    </form>
</fieldset>


<hr/>

<fieldset>
    <legend>Novo Usuario</legend>
    <form method = 'POST' action='/novousuario'>
        <input type='text' name='name' placeholder='Digite um nome' /><br/><br/>
        <input type='number' name='age' placeholder='Digite uma idade' /><br/><br/>
        
            <label for="cars">Selecione o cargo:</label>
            <select name="permission">
                {{#permissions}}
                    <option value={{idpermission}}>{{cargo}}</option>
                {{/permissions}}
            </select><br/><br/>
        
        <input type='submit' value='Inserir Usuario' />
    </form>
</fieldset>


<h2>Usuarios do Banco</h2>

<ul>
    {{#users}}
        <li>
            Nome: {{name}} (Primeira letra {{firstLetterOfName}})
            - Idade: {{age}} 
            - Cargo: {{Permission.cargo}}
            - <a href='/usuario/{{iduser}}/mais'>Aumenta</a> 
            - <a href='/usuario/{{iduser}}/menos'>Diminui</a> 
            - <a href='/usuario/{{iduser}}/excluir'>Excluir</a>
        </li>
    {{/users}}

</ul>

